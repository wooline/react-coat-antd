{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:watch": "nodemon",
    "prod": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register src/main.ts",
    "prod:watch": "cross-env NODE_ENV=production nodemon",
    "build": "tsc",
    "build:run": "node -r tsconfig-paths/register src/main.js"

  },
  "dependencies": {
    "@nestjs/common": "^4.5.9",
    "@nestjs/core": "^4.5.10",
    "@nestjs/microservices": "^4.5.8",
    "@nestjs/testing": "^4.5.5",
    "@nestjs/websockets": "^4.5.8",
    "http-proxy-middleware": "^0.18.0",
    "mockjs": "^1.0.1-beta3",
    "redis": "^2.7.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.6"
  },
  "devDependencies": {
    "cross-env": "^5.1.4",
    "tsconfig-paths": "^3.1.3"
  }
}
